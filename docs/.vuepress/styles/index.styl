.home .hero img
  max-width 450px !important
  width 100%;

.navbar .site-name
  display none;

.layout-footer
  padding: 40px 0;
  border-top: 1px solid #eaecef;
  text-align: center;
  color: #4e6e8e;

.page
  padding-bottom 0 !important;


// vuepress-copy-to-clipboard plugin overrides
.code-copy svg {
  right: 42px !important;
}

.code-copy span {
  right: 74px !important;
  pointer-events: none;
}

// markdown.lineNumbers overrides
.line-numbers-mode
  &:not(.line-numbers) {
    .line-numbers-wrapper {
      display none;
    }

    &:after {
      display none !important;
    }

    pre {
      padding-left: 1.5rem !important;
    }
  }
